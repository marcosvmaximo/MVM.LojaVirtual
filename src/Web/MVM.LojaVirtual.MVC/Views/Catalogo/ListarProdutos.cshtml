@model IEnumerable<MVM.LojaVirtual.MVC.Models.Catalogo.ProdutoViewModel>

@{
ViewData["Title"] = "Catálogo de Produtos";
}
<h2 class="text-center mb-4">@ViewData["Title"]</h2>

@if (Model != null && Model.Any())
{
    <div class="container mt-4">
        <div class="row">
            @foreach (var produto in Model)
            {
                <div class="col-md-4 mb-4">
                    <div class="card shadow-sm">
                        <img src="@produto.Imagem" class="card-img-top" alt="@produto.Nome" style="height: 200px; object-fit: cover;">
                        <div class="card-body">
                            <h5 class="card-title">@produto.Nome</h5>
                            <p class="card-text text-muted">@produto.Descricao</p>
                            <p class="fw-bold text-success">R$ @produto.Valor.ToString("N2")</p>
                            <p class="text-secondary">Estoque: @produto.QuantidadeEstoque</p>
                            <p class="badge @(produto.Ativo ? "bg-success" : "bg-danger")">
                                @(produto.Ativo ? "Ativo" : "Inativo")
                            </p>
                            <p class="text-muted">Cadastrado em: @produto.DataCadastro.ToString("dd/MM/yyyy")</p>
                            <div class="d-flex justify-content-between">
                                <a href="/catalogo/@produto.Id" class="btn btn-outline-primary">Ver</a>
                                <a href="/catalogo/@produto.Id" class="btn btn-success">Comprar</a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
} 
else 
{
    <div class="text-danger p-2">
        <h5>Lista de produtos vázia</h5>
        <p>Nenhum produto cadastrado no momento</p>
    </div>
}

